# Example .env file for API keys and universal vars
# Copy this to .env and fill in your real values.
# This file is tracked in git (safe to push), but .env is ignored.

# AI Chat API Keys
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
XAI_API_KEY=your-xai-api-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
CLOUDFLARE_API_KEY=your-cloudflare-api-key-here
GITHUB_API_KEY=your-github-api-key-here
JINA_API_KEY=your-jina-api-key-here
VOYAGEAI_API_KEY=your-voyageai-api-key-here

# Universal vars for containers (even if not all use them)
OLLAMA_BASE_URL=http://localhost:11434/v1
AZURE_RESOURCE=your-azure-resource-name
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Other common env vars (add as needed)
# DATABASE_URL=postgresql://user:pass@localhost:5432/db
# REDIS_URL=redis://localhost:6379

# New vars as requested
TLD=olips.cloud
TIMEZONE=Europe/Berlin
LANGUAGE=de_DE.UTF-8
MARIADB_HOST=synology-os93-nas  # or 192.168.178.2
MARIADB_PORT=3306
RANDOM_PORTS=true  # Set to true to use random ports, or specify fixed ones below
# Example fixed ports (if RANDOM_PORTS=false)
# APP_PORT=8080
# DB_PORT=3306

# Portable Docker volumes base path (change per machine)
DOCKER_VOLUME_BASE=/volume1/docker  # For NAS; change to /home/pi/docker on RPi, /opt/docker on other server

# Specific dirs for containers
BOOKS_DIR=/volume1/homes/Oliver/09_eBooks  # For calibre-web
DOWNLOADS_DIR=/volume1/downloads  # For lazylibrarian
AUDIOBOOKS_DIR=/volume1/homes/Oliver/10_Audiobooks  # For lazylibrarian

# Common container vars
PUID=1026
PGID=100
TZ=Europe/Berlin
LANGUAGE=de_DE.UTF-8

# App-specific vars
# Calibre
CALIBRE_PASSWORD=secret-password

# Glance
GLANCE_PORT=8280

# IT Tools
ITTOOLS_PORT=8050

# Kleopatra
DISPLAY=unix$DISPLAY

# LazyDocker
LAZYDOCKER_CONFIG_DIR=${DOCKER_VOLUME_BASE}/lazydocker

# LazyLibrarian
LAZYLIBRARIAN_PORT=5299

# N8N (from existing)
N8N_HTTP_PORT=5678
N8N_HOST=${TLD}
N8N_PROTOCOL=https
WEBHOOK_URL=https://${TLD}/n8n
N8N_ENCRYPTION_KEY=your-encryption-key-here
DB_NAME=n8n
DB_HOST=${MARIADB_HOST}
DB_PORT=${MARIADB_PORT}
DB_USER=n8n
DB_PASSWORD=your-db-password-here

# OpenWebUI
OLLAMA_DOCKER_TAG=latest
WEBUI_DOCKER_TAG=main
OPEN_WEBUI_PORT=3000
WEBUI_SECRET_KEY=SECRETHERE

# Paperless-NGX
PAPERLESS_PORT=8010

# Portainer
PORTAINER_PORT=9443

# Snipe-IT
SNIPEIT_PORT=5030
SNIPEIT_APP_URL=https://${TLD}/snipeit
SNIPEIT_APP_KEY=your-app-key-here  # Generate a base64 key
SNIPEIT_DB_DATABASE=snipeit
SNIPEIT_DB_USER=snipeit
SNIPEIT_DB_PASSWORD=changeMe

# Vaultwarden
VAULTWARDEN_PORT=6060
SIGNUPS_ALLOWED=false
SIGNUPS_DOMAINS_WHITELIST=

# VSCode Server
VSCODE_PORT=5100
VSCODE_PASSWORD=CHANGEME
DEFAULT_WORKSPACE=/repos

# Windows
WINDOWS_VERSION=11
WINDOWS_PORT_1=8006
WINDOWS_PORT_2=3389